

<div class="page-container">
  <div class="image-container">
    <img src="<%= asset_path('Sign_Up_Graphics.png') %>" alt="Sign Up" class="overlay-image">
  </div>
  <div class="grey-container">
    <div class="container px-4">
      <h1 class="text-center mb-2 signup-header">Get Started Now</h1>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>

          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="row">
              <div class="col">
                <%= f.input :first_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "first_name", class: "rounded-input" },
                            label_html: { class: "custom-label" },
                            wrapper_html: { class: "custom-wrap" }  %>
              </div>
              <div class="col">
                <%= f.input :last_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "last_name", class: "rounded-input" },
                            label_html: { class: "custom-label"  },
                            wrapper_html: { class: "custom-wrap" } %>
              </div>
            </div>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "rounded-input" },
                        label_html: { class: "custom-label" },
                        wrapper_html: { class: "custom-wrap" } %>
            <div class="row">
              <div class="col">
                <%= f.input :password,
                            required: true,

                            input_html: { autocomplete: "new-password", class: "rounded-input" },
                            label_html: { class: "custom-label" },
                            placeholder: "ðŸ”‘" %>
              </div>
              <div class="col">
                <%= f.input :retype_password,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "rounded-input" },
                        label_html: { class: "custom-label" } %>
              </div>
            </div>
          </div>

          <div class="form-actions mb-4 text-center">
            <%= f.button :submit, "Sign up", class:"button-signup" %>
          </div>

        <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>

      <p class="text-center mt-3">Or continue with</p>

      <div class="d-flex justify-content-center">
      <button class="me-3 external-sign"><i class="fa-brands fa-google"></i></button>
      <button class="me-3 external-sign"><i class="fa-brands fa-apple"></i></button>
      <button class="external-sign"><i class="fa-brands fa-facebook"></i></button>
      </div>
    </div>
  </div>
</div>
