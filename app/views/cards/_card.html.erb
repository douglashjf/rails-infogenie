<div class="container">
  <div class="row">
    <% @cards.each do |card| %>
      <div class="col-12">
        <a href="<%= card_path(card) %>" class="card-link">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= card.primary_keywords %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= card.secondary_keywords %></h6>
              <% if card.summaries.last.present? %>
                <p class="card-text"><%= card.summaries.last.key_points %></p>
              <% end %>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
