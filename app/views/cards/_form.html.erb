<%= simple_form_for(card, data: { loading_page_target:"form" , action: "submit->loading-page#toggleLoadingPage"}) do |f| %>
  <%= f.input :primary_keywords,
    label: "What is the topic you want to learn today?",
    placeholder: "Ex: Genie",
    class: "new-card-wrapper",
    input_html: { class: "italic-placeholder input-border" }%>
  <%= f.input :secondary_keywords,
    label: "Give additional keywords for more context",
    placeholder: "Lamps Arabia",
    input_html: { class: "italic-placeholder input-border" } %>

  <%= f.button :submit, 'Submit', class: "btn btn-success button-shadowed mt-2" %>
<% end %>
