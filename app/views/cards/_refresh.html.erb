<div data-refresh-news-target="renderNews" >
  <% if @card.news_articles.present? %>
    <span class="text-secondary last-refresh">Last Refreshed: <%= (@card.news_articles.last.updated_at.in_time_zone('Asia/Singapore').strftime('%d %b %l:%M%P')) %></span>
  <% end %>
  <% if @articles.present? %>

      <% @articles.each do |article| %>
        <hr>
        <strong><p class="my-0"><%= article.title %></p></strong>
        <a href="<%= article.url %>" target="_blank" class="text-decoration-none"><%= "#{URI.parse(article.url).host}"  %></a>
        <p class="text-secondary time"><%= article.published_at.in_time_zone('Asia/Singapore').strftime('%d %b %l:%M%P') %></p>


      <% end %>

  <% else %>
    <p>No news articles available.</p>
  <% end %>
</div>
