<div class="container fav-container d-flex flex-column align-items-center">
  <div class="fav-heading mb-3"><h1>Favourites list</h1></div>
    <% @favourites.each do |favourite| %>
      <% card = favourite.card %>
      <div class="card col-12">
         <a href="<%= card_path(card) %>" class="card-link">
              <div class="card-body">
                <div class="card-title"><%= card.primary_keywords %></div>
                <div class="card-subtitle"><%= card.secondary_keywords %></div>
                <p>Created by: <%= card.user.first_name %></p>
                <% card.categories.each do |category| %>
                  <%= button_tag class: "icon-button" do %>
                    <%= content_tag(:i, "", class: "fa-solid fa-tag", style: "color: #131417;") %>
                    <%= category.tag %>
                  <% end %>
                <% end %>
              </div>
            </a>
        </div>
    <% end %>

</div>
