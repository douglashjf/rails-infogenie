<div class="container">
  <h1>Favourites list</h1>
    <% @favourites.each do |favourite| %>
      <% card = favourite.card %>
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <h5 class="card-title"><%= link_to card.primary_keywords, card_path(card) %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= card.secondary_keywords %></h6>
          <% if card.summaries.last.present?  %>
            <p class="card-text"><%= card.summaries.last.key_points %></p>
          <% end %>
          <%# <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a> %>
        </div>
      </div>
    <% end %>

</div>
